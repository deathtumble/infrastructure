{
    "services": [
        {
            "name": "graphite_sshd",
            "address": "",
            "port": 22,
            "checks": [ 
                {
                    "id": "ssh",
                    "name": "SSH TCP on port 22",
                    "tcp": "localhost:22",
                    "interval": "10s",
                    "timeout": "1s"
                }
            ]
        },
        {
            "name": "graphite",
            "address": "",
            "port": 2003,
            "checks": [
                {
                    "id": "api",
                    "name": "HTTP API on port 3000",
                    "http": "http://localhost:3000/api/health",
                    "tls_skip_verify": false,
                    "method": "GET",
                    "interval": "10s",
                    "timeout": "1s"
                }
            ]
        }    
    ]
}

