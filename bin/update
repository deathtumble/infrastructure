#!/bin/bash

set -e
directory=`dirname $0`
source setenv

services=$*

while test $# -gt 0
do
    case "$1" in
        nexus) 
            $directory/support/terraform apply -auto-approve -target=module.nexus.aws_ecs_service.this -var 'nexus_task_status=down'
            ;;
        concourse) 
            $directory/support/terraform apply -auto-approve -target=module.concourse.aws_ecs_service.this -var 'concourse_task_status=down'
            ;;
        dashing) 
            $directory/support/terraform apply -auto-approve -target=module.dashing.aws_ecs_service.this -var 'dashing_task_status=down'
            ;;
        monitoring) 
            $directory/support/terraform apply -auto-approve -target=module.monitoring.aws_ecs_service.this -var 'monitoring_task_status=down'
            ;;
    esac
    
    shift
done

sleep 90

if $directory/support/terraform apply -auto-approve \
  -target=module.nexus.aws_ecs_service.this \
  -target=module.concourse.aws_ecs_service.this \
  -target=module.dashing.aws_ecs_service.this \
  -target=module.monitoring.aws_ecs_service.this ; then

  $directory/support/configConsul ${product} ${environment}

  $directory/support/slack terraform update $services to ${product}-${environment} has succeed

else
   $directory/support/slack terraform update $services to ${product}-${environment} has failed
if

