#!/bin/bash

set -e
directory=`dirname $0`
source terraform.tfvars

services=$*

while test $# -gt 0
do
    case "$1" in
        nexus) 
            terraform apply -auto-approve -var 'nexus_task_status=down'
            ;;
        concourse) 
            terraform apply -auto-approve -var 'concourse_task_status=down'
            ;;
        dashing) 
            terraform apply -auto-approve -var 'dashing_task_status=down'
            ;;
        monitoring) 
            terraform apply -auto-approve -var 'monitoring_task_status=down'
            ;;
    esac
    
    shift
done

printf 'Pausing for 90 seconds\n'

$directory/support/pause 90

printf "\b Continue\n"

if terraform apply -auto-approve ; then

    $directory/support/slack terraform update $services to ${product}-${environment} has succeed

else
    $directory/support/slack terraform update $services to ${product}-${environment} has failed
fi

