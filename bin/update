#!/bin/bash

set -e
directory=`dirname $0`
source setenv

services=$*

while test $# -gt 0
do
    case "$1" in
        nexus) 
            $directory/support/terraform apply -auto-approve -var 'nexus_task_status=down'
            ;;
        concourse) 
            $directory/support/terraform apply -auto-approve -var 'concourse_task_status=down'
            ;;
        dashing) 
            $directory/support/terraform apply -auto-approve -var 'dashing_task_status=down'
            ;;
        monitoring) 
            $directory/support/terraform apply -auto-approve -var 'monitoring_task_status=down'
            ;;
    esac
    
    shift
done

printf 'Pausing for 90 seconds\n'

$directory/support/pause 90

printf "\b Continue\n"

if $directory/support/terraform apply -auto-approve ; then

    $directory/support/configConsul ${product} ${environment}

    $directory/support/slack terraform update $services to ${product}-${environment} has succeed

else
    $directory/support/slack terraform update $services to ${product}-${environment} has failed
fi

